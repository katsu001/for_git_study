import numpy as np
import matplotlib.pyplot as plt

# パラメータ設定
capacity = 100  # バッテリー容量 (Ah)
initial_soc = 0.5  # 初期充電状態 (SOC)
load_current = 10  # 負荷電流 (A)
time_step = 1  # 時間ステップ (秒)
simulation_time = 3600  # シミュレーション時間 (秒)

# シミュレーション
time = np.arange(0, simulation_time, time_step)
soc = initial_soc - (load_current * time) / (capacity * 3600)

# 結果のプロット
plt.plot(time, soc)
plt.xlabel('Time (s)')
plt.ylabel('State of Charge (SOC)')
plt.title('Battery Discharge Simulation')
plt.grid(True)
plt.show()